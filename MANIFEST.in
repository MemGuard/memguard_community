# Include documentation
include README.md
include LICENSE
include CHANGELOG.md
include PRODUCTION_READINESS_REPORT.md

# Include configuration files
include pyproject.toml
include setup.py
include requirements.txt

# Include package data
recursive-include memguard *.py
recursive-include memguard/config *.yaml *.json
recursive-include memguard/templates *.html
recursive-include memguard/static *.css *.js

# Include tests (optional - can be excluded for smaller package)
recursive-include tests *.py
exclude tests/test_extended_runtime.py

# Include examples
recursive-include examples *.py *.md

# Include docs
recursive-include docs *.md *.rst *.txt

# Exclude development files
exclude .gitignore
exclude .github/*
exclude .pytest_cache/*
exclude *.pyc
exclude __pycache__/*
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
recursive-exclude * *.orig
recursive-exclude * *.rej
exclude .coverage
exclude .tox
exclude .mypy_cache

# Exclude virtual environments
exclude mem-env/*
exclude venv/*
exclude env/*

# Exclude Firebase/development files
exclude mem_firebase_license_manager/*
exclude goldens/*
exclude bench/*

# Exclude local test results
exclude reports/*
exclude *.log
exclude extended_runtime_stats_*.json